[init]
  defaultBranch = main
[core]
  excludesfile = ~/.config/gitconfig/global.gitignore
  pager = delta
[user]
  name = Nantachai Sangadsri
  email = bz.nantachai@gmail.com
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  dark = true      # or light = true, or omit for auto-detection
  side-by-side = true
[merge]
    conflictStyle = zdiff3
[includeIf "gitdir:~/Documents/works/"]
  path = ~/.config/gitconfig/work.gitconfig
